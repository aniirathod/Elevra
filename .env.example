# ============================================
# NEON DATABASE (Production)
# ============================================
# Get from: https://console.neon.tech
DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# For Railway: Use direct connection
# For Serverless: Use pooled connection
# DATABASE_URL=postgresql://user:pass@ep-xxx-pooler.us-east-2.aws.neon.tech/neondb?sslmode=require&pgbouncer=true

# ============================================
# BACKEND (Railway)
# ============================================
NODE_ENV=production
PORT=4000

# Authentication
JWT_SECRET=generate-with-openssl-rand-base64-32
JWT_EXPIRES_IN=7d

# CORS - Add your Vercel domain
CORS_ORIGINS=https://your-app.vercel.app,https://www.your-domain.com

# Frontend URL (Vercel)
FRONTEND_URL=https://your-app.vercel.app

# API Keys
OPENAI_API_KEY=sk-your-key-here

# Logging
LOG_LEVEL=info

# ============================================
# FRONTEND (Vercel)
# ============================================
# Must start with NEXT_PUBLIC_ to be available in browser
NEXT_PUBLIC_API_URL=https://your-backend.up.railway.app
NEXT_PUBLIC_BASE_URL=https://your-app.vercel.appz